@{
}
<div class="container">
        

        @using (Html.BeginForm("Login", "Home", FormMethod.Post)) // Create a form to submit login details to the server
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="UserName" class="form-control" minLength ="6" maxlength = "19"/>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="Password" class="form-control" minLength ="9"/>
            </div>
            <br />

            <button type="submit" class="btn btn-primary">Login</button>
        }

    </div>